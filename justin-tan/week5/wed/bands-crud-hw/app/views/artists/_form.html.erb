<%= form_with model: @artist, local: true do |f| %>

    <p><%= f.label :name %><p>
    <%= f.text_field :name %>

    <p><%= f.label :age %><p>
    <%= f.number_field :age %>

    <p><%= f.label :nationality %><p>
    <%= f.text_field :nationality %>

    <p><%= f.label :hobbies %><p>
    <%= f.text_field :hobbies %>

    <p><%= f.label :bio %><p>
    <%= f.text_field :bio %>

    <p><%= f.label :image, 'Image URL' %><p>
    <%= f.text_field :image %>
    <br><br>

    <%= f.label :band_id, 'Band' %>
    <%= f.collection_select :band_id, Band.all, :id, :name, include_blank: true %>

    <br><br>

    <%= f.submit %>

<% end %>
